<p id="notice"><%= notice %></p>

<h3>Job Boards</h3>

<table class="striped">
  <thead>
    <tr>
      <th>Headline</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_boards.each do |job_board| %>
      <tr>
        <td><%= job_board.headline %></td>
        <td><%= job_board.content %></td>
        <td><%= link_to 'Show', job_board %></td>
        <td><%= link_to 'Edit', edit_job_board_path(job_board) %></td>
        <td><%= link_to 'Destroy', job_board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_board_path, class:"waves-effect waves-light btn" %>
